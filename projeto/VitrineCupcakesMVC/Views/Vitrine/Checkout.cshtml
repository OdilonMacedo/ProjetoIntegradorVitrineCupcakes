@model CheckoutViewModel;

@{
    ViewBag.Title = "Checkout";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Checkout</h2>

    <div class="row">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Resumo do Pedido</h5>
                </div>
                <div class="card-body">
                    @foreach (var item in Model.Itens)
                    {
                        <div class="d-flex justify-content-between border-bottom pb-2 mb-2">
                            <span>@item.Nome</span>
                            <strong>R$ @item.Preco</strong>
                        </div>
                    }

                    <h4 class="text-end mt-3">
                        Total: <span class="text-success fw-bold">R$ @Model.Total</span>
                    </h4>
                </div>
            </div>
        </div>

        <div class="col-md-7">
            <div class="card shadow">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Dados do Cliente</h5>
                </div>
                <div class="card-body">

                    <form asp-action="Finalizar" method="post">

                        <div class="mb-3">
                            <label class="form-label">Nome</label>
                            <input asp-for="NomeCliente" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">E-mail</label>
                            <input asp-for="Email" type="email" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Endereço</label>
                            <input asp-for="Endereco" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Cidade</label>
                            <input asp-for="Cidade" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">CEP</label>
                            <input asp-for="Cep" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Método de Pagamento</label>
                            <select asp-for="MetodoPagamento" class="form-select" required>
                                <option value="">Selecione...</option>
                                <option>Cartão de Crédito</option>
                                <option>Pix</option>
                                <option>Boleto</option>
                            </select>
                        </div>

                        @foreach (var item in Model.Itens)
                        {
                            <input type="hidden" name="Itens" value="@item.Nome" />
                        }

                        <input type="hidden" name="Total" value="@Model.Total" />

                        <button type="submit" class="btn btn-success w-100 mt-3">
                            Finalizar Pedido
                        </button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>